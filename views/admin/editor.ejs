<!DOCTYPE html>
<html lang="en">

<head>
	<%- include("../common/head", {title: "editor"}) %>
	<link rel="stylesheet" href="/static/style/simplemde.min.css">
	<script src="/static/js/simplemde.min.js"></script>
    <script src="/static/js/admin.js"></script>
</head>

<body>
    <div class="menubox">
		<%- include("../common/menubox"); %>
    </div>

    <div class="content">
    	<div class="entrybox">
			<div class="entry metaentry">
				<div class="title">
					post creator
				</div>
				<hr class="seperator">
				<div class="preview">
					<form action="/admin/editor/post" method="POST" class="editor">
						<div class="editor">
							<input name="headline" class="editor title" placeholder="title" type="text">
							<textarea class="editor mde" id="mde"># Your post (NO HEADLINE HERE)</textarea>
							<input name="tag" class="editor tags" placeholder="TAGS HERE, comma (and or space) seperated">
							<textarea name="description" class="editor desc" placeholder="description"></textarea>
						</div>
						<input name="content" id="input_content" type="hidden">
						<input name="author" class="editor author" placeholder="Author">
						<input name="action" type="submit" value="preview">
						<input name="action" type="submit" value="post">
						<button onclick="save()">save localy</button>
						<input class="editor load" type="file" onchange="load()">
						<a class="dl"   download="export.post.json"></a>
						<a class="link" target="_blank" on></a>
					</form>
				</div>
			</div>
    	</div>
    	
    </div>

	<div class="footer"></div>
</body>
</html>
